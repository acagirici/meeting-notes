<h1>Create A Meeting</h1>
<h3>Complete the form below to record your meeting. </h3>

<form action="/meetings" method="POST">
    <label for="date">Date:</lable>
    <input type="date" name="date" id="date"><br><br>
    <label for="name">Client Name:</lable>
    <input type="text" name="name" id="name"><br><br>
    <label for="subject">Meeting Subject:</lable>
    <input list="subject" name="subject"><br><br>
        <datalist id="subject">
            <option value="College Guidance">
            <option value="Career Guidance">
            <option value="Financial Aid">
            <option value="Follow-up">
            <option value="Updates">
        </datalist>
    <label for="note">Notes:</lable>
    <textarea name="note" id="note" rows="5" cols="60"></textarea><br><br>
    <label for="assignment">Next Meeting To Dos:</lable>
    <textarea name="assignment" id="assignment" rows="5" cols="60"></textarea><br><br>

    <input type="submit" value="Create Meeting">
</form>

